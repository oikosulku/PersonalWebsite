<% layout('layouts/boilerplate')%>


    <section>
            
        <h2>Manage Users</h2>
        <table>
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>Role</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% for(let user of users) { %>
                <tr>
                    <td><%=user.username%></td>
                    <td><%=user.email%></td>
                    <td><%=user.role%></td>
                    <% if(currentUser.role === 'Admin') { %>
                    
                        <td>
                            
                            <a href="users/<%=user._id%>/edit" class="button">Edit</a>
                        
                            <% if(currentUser.username !== user.username) { %>
                                <form action="/users/<%=user._id%>?_method=DELETE" method="POST">
                                    <button class="button delete">Delete</button>
                                </form>
                               
                            <% } %>
                        </td>
                    <% } %>
                </tr>
             <% } %>
            </tbody>
       </table>
    </section>
    